    }

    .dropdown-menu {
        display: none;
        position: absolute;
        top: calc(100% - 5px);
        right: 0;
        background-color: var(--bg-secondary);
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        padding-top: 10px;
