    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (isCompleted) return;

        if (!isPracticeActive)
        {
            StartPractice();
        }

        if (e.Key.Length == 1)
        {
            char typedChar = e.Key[0];
            char expectedChar = currentPosition < practiceText.Length ? practiceText[currentPosition] : '\0';

            typedText += typedChar;
            totalKeysPressed++;

            if (expectedChar != '\0' && typedChar == expectedChar)
            {
                correctKeysPressed++;
                char normalizedKeyForMap = Char.ToLower(typedChar);
                if (keyHeatMap.ContainsKey(normalizedKeyForMap))
                {
                    keyHeatMap[normalizedKeyForMap]++;
                }
                else if (typedChar == ' ' && keyHeatMap.ContainsKey(' '))
                {
                    keyHeatMap[' ']++;
                }
            }

            currentPosition++;

            if (currentPosition >= practiceText.Length)
            {
                CompletePractice();
            }

            UpdateMetrics();
            StateHasChanged();
        }
    }

