    private void CalculateOverallStatistics()
    {
        if (keyStatistics.Count == 0) return;

        double totalAccuracySum = 0;
        double totalWpmSum = 0;
        totalScore = 0;
        int completedCountForAverage = 0;
        keysToImprove.Clear();

        foreach (var statEntry in keyStatistics)
        {
            if (statEntry.Value.IsCompleted)
            {
                totalAccuracySum += statEntry.Value.Accuracy;
                totalWpmSum += statEntry.Value.Wpm;
                totalScore += statEntry.Value.Score;
                completedCountForAverage++;

                if (statEntry.Value.Accuracy < 85)
                {
                    keysToImprove.Add(statEntry.Key);
                }
            }
        }

        averageAccuracy = completedCountForAverage > 0 ? totalAccuracySum / completedCountForAverage : 0;
        averageWpm = completedCountForAverage > 0 ? totalWpmSum / completedCountForAverage : 0;

        if (keysToImprove.Count == 0 && completedCountForAverage > 0)
        {
            var slowestKeys = keyStatistics
                .Where(kv => kv.Value.IsCompleted)
                .OrderBy(kv => kv.Value.Wpm)
                .Take(Math.Min(3, completedCountForAverage))
                .Select(kv => kv.Key);
            keysToImprove.AddRange(slowestKeys);
        }
    }

