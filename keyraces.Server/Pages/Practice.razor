        char normalizedKey = Char.ToLower(key);

        if (pressedKeys.Contains(key.ToString()) || pressedKeys.Contains(normalizedKey.ToString()))
        {
            classes.Add("pressed");
        }

        if (keyHeatMap.ContainsKey(normalizedKey))
        {
            int heat = keyHeatMap[normalizedKey];
            if (heat > 20) classes.Add("heat-high");
            else if (heat > 10) classes.Add("heat-medium");
            else if (heat > 0) classes.Add("heat-low");
        }

        if (highlightedKey.HasValue && Char.ToLower(highlightedKey.Value) == normalizedKey)
        {
            classes.Add("highlighted");
        }

        if (keyStatistics.ContainsKey(normalizedKey) && keyStatistics[normalizedKey].IsCompleted)
        {
            classes.Add("completed");
        }

        if (key == ' ' && keyHeatMap.ContainsKey(' '))
        {
            int heat = keyHeatMap[' '];
            if (heat > 20) classes.Add("heat-high");
            else if (heat > 10) classes.Add("heat-medium");
            else if (heat > 0) classes.Add("heat-low");
        }


        return string.Join(" ", classes);
    }

