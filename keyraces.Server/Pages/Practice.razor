    private void GeneratePracticeWords()
    {
        try
        {
            if (!languagePracticeWords.ContainsKey(language) || languagePracticeWords[language] == null)
            {
                languagePracticeWords[language] = new Dictionary<char, List<string>>();
            }

            char normalizedCurrentKey = Char.ToLower(currentKey);

            if (languagePracticeWords[language].ContainsKey(normalizedCurrentKey) &&
                languagePracticeWords[language][normalizedCurrentKey].Count > 0)
            {
                var wordsList = new List<string>(languagePracticeWords[language][normalizedCurrentKey]);

                int wordsCount = Math.Min(random.Next(1, 2), wordsList.Count);
                practiceWords = new List<string>();

                wordsList = ShuffleList(wordsList);

                for (int i = 0; i < wordsCount; i++)
                {
                    practiceWords.Add(wordsList[i % wordsList.Count]);
                }

                practiceWords = ShuffleList(practiceWords);
            }
            else
            {
                Console.WriteLine($"No words found for key '{currentKey}' in language '{language}'. Using fallback or trying next key.");
                var keys = GetCurrentLanguageKeys();
                int currentIndexInKeysArray = Array.IndexOf(keys, currentKey);
                if (currentIndexInKeysArray == -1) currentIndexInKeysArray = Array.IndexOf(keys, Char.ToLower(currentKey));


                for (int i = 1; i < keys.Length; i++)
                {
                    int nextIndex = (currentIndexInKeysArray + i) % keys.Length;
                    char nextKeyToTry = keys[nextIndex];
                    char normalizedNextKeyToTry = Char.ToLower(nextKeyToTry);

                    if (languagePracticeWords[language].ContainsKey(normalizedNextKeyToTry) &&
                        languagePracticeWords[language][normalizedNextKeyToTry].Count > 0)
                    {
                        currentKey = nextKeyToTry;
                        highlightedKey = currentKey;
                        Console.WriteLine($"Switched to next available key: {currentKey}");
                        GeneratePracticeWords();
                        return;
                    }
                }
                practiceWords = new List<string> { "no", "words", "available" };
                Console.WriteLine("Using fallback words as no key has practice words.");
            }

            UpdateKeyStatus();

            practiceText = string.Join(" ", practiceWords);
            typedText = "";
            currentPosition = 0;
            isCompleted = false;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in GeneratePracticeWords: {ex.Message} {ex.StackTrace}");
            practiceWords = new List<string> { "error", "generating", "words" };
        }
    }

    private List<T> ShuffleList<T>(List<T> list)
    {
        int n = list.Count;
        while (n > 1)
        {
            n--;
            int k = random.Next(n + 1);
            T value = list[k];
            list[k] = list[n];
            list[n] = value;
        }
        return list;
    }

